                    {
                        <li><a href="@Url.Action("Login", "Authentication")">Login</a></li>
                        <li><a href="@Url.Action("Registration", "Authentication")">Create Account</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

