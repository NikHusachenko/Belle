@using Belle.Web.Models.Product
@model BuyedHttpGetVm

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                @if (Model.Products.Count > 0)
                {
                    <table>
                        <thead class="cart__row cart__header">
                            <tr>
                                <th colspan="2" class="text-center">Product</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-right">Buyer ID</th>
                                <th class="action">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Products.Count; i++)
                            {
                                <tr class="cart__row border-bottom line1 cart-flex border-top">
                                    <td class="cart__image-wrapper cart-flex-item">
                                        <a href="@Url.Action("Details", "Product", new { @id = @Model.Products[i].Id })"><img class="cart__image" src="@Model.Products[i].PathToImage" alt="Elastic Waist Dress - Navy / Small"></a>
                                    </td>
                                    <td class="cart__meta small--text-left cart-flex-item">
                                        <div class="list-view-item__title">
                                            <a href="@Url.Action("Details", "Product", new { @id = @Model.Products[i].Id })">@Model.Products[i].Name</a>
                                        </div>
                                        
                                        <div class="cart__meta-text">
                                            Catefory: @Html.DisplayFor(model => model.Products[i].Category)<br>Size: @Html.DisplayFor(model => model.Products[i].Size)<br>
                                        </div>
                                    </td>
                                    <td class="cart__price-wrapper cart-flex-item">
                                        <span class="money">@Model.Products[i].Price</span>
                                    </td>
                                    <td class="cart__update-wrapper cart-flex-item text-right">
                                        <div class="cart__qty text-center">
                                            <div class="qtyField">
                                                <input class="cart__qty-input qty" type="text" name="updates[]" id="qty" value="@Model.Products[i].Count" pattern="[0-9]*">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-right small--hide cart-price">
                                        <div><span class="money">@Model.Products[i].UserFK</span></div>
                                    </td>
                                    <td class="text-center small--hide"><a href="#" class="btn btn--secondary cart__remove" title="Remove from cart"><i class="icon icon anm anm-times-l"></i></a></td>
                                </tr>
                            }
                        </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">No one product was buyed</div>
            }
        </div>
    </div>
</div>